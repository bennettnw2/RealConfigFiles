#-------------------------------------------------------------
# Bash Aliases
#-------------------------------------------------------------
alias e='exit'
alias c='clear'
alias ld='ls -d'
alias ll='ls -lh'
alias lla='ls -lha'
alias cl='clear && ls'
alias lsm='ls *.md'
alias pls='sudo $(history -p \!\!)'
alias grep='/usr/bin/egrep'
export PS1="_____________________ macOS | \w \n$ "

#-------------------------------------------------------------
# Git Aliases
#-------------------------------------------------------------
alias gs='git status'
alias gaa='git add -A'
alias gc='git commit'
alias gpu='git push -u origin master'

#-------------------------------------------------------------
# Linode CLI Aliases
#-------------------------------------------------------------
alias lcli="linode-cli"
alias lcli-il="linode-cli images list"
alias lcli-ll="linode-cli linodes list"
alias lcli-lc="linode-cli linodes create"
alias lcli-ld="linode-cli linodes delete"

